<Window x:Class="HMSDashboard.Payment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMSDashboard"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
          Background="#FFF5F5F7"
        Title="Payment"  Height="800" Width="1000"
         WindowState="Maximized"
        WindowStartupLocation="CenterScreen"

        >


    <Canvas Margin="31,0,31,13">
        <!-- Sidebar -->
        <StackPanel Width="200" Height="704" Canvas.Left="0" Canvas.Top="0">
            <Image Height="77" Width="168" Source="/Group 1.png"/>
            <Label Content="Main menu" Width="160" Height="29"/>
            <StackPanel Margin="10">
                <!-- Repeated Menu Buttons with Canvas and Image -->
                <!-- Simplified here for clarity -->
                <!-- Dashboard Button -->
                <Canvas Height="51" Width="170">
                    <Button Content="Dashboard" Width="165" Height="36" Padding="10,5"
                  Background="#FFE4ECFF" BorderBrush="{x:Null}" Cursor="Hand"
                  Canvas.Left="5" Canvas.Top="5" Click="MainWindow_click">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Image Height="26" Width="28" Source="/Combo Chart.png" Canvas.Left="12" Canvas.Top="8"/>
                </Canvas>
                <!-- Add other menu items similarly -->

                <!-- Patients -->
                <Canvas Height="51">
                    <Button Content="Patients"
   Padding="10,5"
   Canvas.Left="10"
   Canvas.Top="8"
   HorizontalAlignment="Center"
   VerticalAlignment="Center"
   Width="165"
   Height="36"
   Background="#FFE4ECFF"
   BorderBrush="{x:Null}"
   Click="Patient_Click"
   Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}"
               CornerRadius="6"
               BorderBrush="{TemplateBinding BorderBrush}"
               BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Image Height="24" Width="28" Canvas.Left="16" Canvas.Top="14"
  Source="/Add User Male.png"
  HorizontalAlignment="Center"
  VerticalAlignment="Top"/>
                </Canvas>

                <!-- Doctors -->
                <Canvas Height="51">
                    <Button Content="Doctors"
   Padding="10,5"
   Canvas.Left="10"
   Canvas.Top="8"
   HorizontalAlignment="Center"
   VerticalAlignment="Top"
   Width="165"
   Height="36"
   Background="#FFE4ECFF"
   BorderBrush="{x:Null}"
   Cursor="Hand" Click="Doctor_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}"
               CornerRadius="6"
               BorderBrush="{TemplateBinding BorderBrush}"
               BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Image Height="28" Width="28" Source="/medical-assistance.png"
  Canvas.Left="17" Canvas.Top="12"
  HorizontalAlignment="Left"
  VerticalAlignment="Top"/>
                </Canvas>

                <!-- Appointments -->
                <Canvas Height="51">
                    <Button Content="Appointments"
   Padding="10,5"
   Canvas.Left="10"
   Canvas.Top="7"
   HorizontalAlignment="Left"
   VerticalAlignment="Top"
   Width="165"
   Height="36"
   Background="#FFE4ECFF"
   BorderBrush="{x:Null}"
   Cursor="Hand" Click="Appointment_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}"
               CornerRadius="6"
               BorderBrush="{TemplateBinding BorderBrush}"
               BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Image Height="28" Width="29" Canvas.Left="15" Canvas.Top="11"
  HorizontalAlignment="Left"
  VerticalAlignment="Top"
  Source="/Calendar Plus.png"/>
                </Canvas>

                <!-- Other menu -->
                <Canvas Height="53">
                    <Label Content="Other menu"
  Canvas.Top="17"
  Canvas.Left="10"
  FontSize="16"
  Foreground="#FF3A3939"
  HorizontalAlignment="Center"
  VerticalAlignment="Center"/>
                </Canvas>

                <!-- Payments -->
                <Canvas Height="51">
                    <Button Content="Payments"
   Padding="10,5"
   Canvas.Left="8"
   Canvas.Top="7"
   Width="164"
   Height="37"
   Background="#FFBED3FF"
   BorderBrush="{x:Null}"
   Cursor="Hand"/>
                    <Image Height="28" Width="28" Source="/Coin in Hand.png"
  Canvas.Left="16" Canvas.Top="12"/>
                </Canvas>

                <!-- Reports -->
                <Canvas Height="51">
                    <Button Content="Reports"
   Padding="10,5"
   Canvas.Left="8"
   Canvas.Top="8"
   Width="164"
   Height="36"
   Background="#FFE4ECFF"
   BorderBrush="{x:Null}"
   Cursor="Hand"/>
                    <Image Height="32" Width="28" Source="/Test Results.png"
  Canvas.Left="17" Canvas.Top="10"/>
                </Canvas>

                <!-- Inventory -->
                <Canvas Height="51">
                    <Button Content="Inventory"
   Padding="10,5"
   Canvas.Left="8"
   Canvas.Top="8"
   Width="164"
   Height="36"
   Background="#FFE4ECFF"
   BorderBrush="{x:Null}"
   Cursor="Hand"/>
                    <Image Height="28" Width="28" Source="/Sell Stock.png"
  Canvas.Left="14" Canvas.Top="12"/>
                </Canvas>

                <!-- Separator -->
                <Separator Margin="10 20"/>

                <!-- Chat -->
                <Canvas Height="51">
                    <Button Content="Chat"
   Padding="10,5"
   Canvas.Left="8"
   Canvas.Top="8"
   Width="164"
   Height="36"
   Background="#FFF3F6FD"
   BorderBrush="{x:Null}"/>
                    <Image Height="28" Width="28" Source="/Chat Bubble.png"
  Canvas.Left="16" Canvas.Top="12"/>
                </Canvas>

                <!-- Help Center -->
                <Canvas Height="51">
                    <Button Content="Help Center"
   Padding="10,5"
   Canvas.Left="8"
   Canvas.Top="8"
   Width="164"
   Height="36"
   Background="#FFF3F6FD"
   BorderBrush="{x:Null}"/>
                    <Image Height="28" Width="28" Source="/Info.png"
  Canvas.Left="17" Canvas.Top="12"/>
                </Canvas>


            </StackPanel>
        </StackPanel>
        
        <Canvas>
            <local:UserCard Canvas.Left="757" Canvas.Top="22" />
        </Canvas>
   




        <!-- Patient Details Panel -->


        <Canvas Height="100" Canvas.Top="260">
            <!-- New Patient Button -->
            <Canvas/>

            <!-- Search Box (TextBox) -->









        </Canvas>

        <Border Canvas.Left="281" Canvas.Top="112" Width="594" Height="211" Background="White" CornerRadius="40" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Canvas>
            <!-- NIC Label -->
            <Label Content="Doctor Name&#xA;"
        Canvas.Left="360"
        Canvas.Top="156"
        Foreground="Black"
        FontWeight="Bold"
        HorizontalAlignment="Left"
        VerticalAlignment="Center" Height="26"/>

            <!-- NIC TextBox -->
            <TextBox x:Name="DocNameTextBox"
          Width="250"
          Height="36"
          Canvas.Left="360"
          Canvas.Top="182"
          Padding="10,5"
          Background="White"
          BorderBrush="LightGray"
          BorderThickness="1"
          FontSize="14"
          VerticalContentAlignment="Center"
          HorizontalAlignment="Left"
          VerticalAlignment="Center">
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Border Background="{TemplateBinding Background}"
                                 CornerRadius="8"
                                 BorderBrush="{TemplateBinding BorderBrush}"
                                 BorderThickness="{TemplateBinding BorderThickness}">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- DatePicker -->
            <DatePicker  x:Name="AppointmentDatePicker" Canvas.Left="647" Canvas.Top="185" HorizontalAlignment="Left" Height="26" VerticalAlignment="Center" Width="115"  SelectedDate="{x:Static sys:DateTime.Today}"/>



            <!-- AppointmentDateTextBox -->

            <Label Content="Appointment No"
Canvas.Left="403"
Canvas.Top="226"
Foreground="Black"
FontWeight="Bold"
HorizontalAlignment="Left"
VerticalAlignment="Center" Height="26"/>

            <!-- Appointment No  input-->
            <TextBox  x:Name="AppointmentNoTextBox"
  Width="142"
  Height="36"
  Canvas.Left="403"
  Canvas.Top="257"
  Padding="10,5"
  Background="White"
  BorderBrush="LightGray"
  BorderThickness="1"
  FontSize="14"
  VerticalContentAlignment="Center"
  HorizontalAlignment="Left"
  VerticalAlignment="Center" RenderTransformOrigin="0.446,0.584">
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Border Background="{TemplateBinding Background}"
                         CornerRadius="8"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="{TemplateBinding BorderThickness}">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>


            <!-- Buttons -->

            <Button Content="Find"
         Height="38"
         Width="98"
         Canvas.Left="606"
         Canvas.Top="255"
         Background="#FFBED3FF"
         BorderThickness="0"
         Cursor="Hand"
         FontWeight="Bold"
         HorizontalAlignment="Left"
         VerticalAlignment="Center"
         BorderBrush="Transparent"
         Padding="10,5"
          Click="findAppointment"
         />
        </Canvas>



        <!-- DataGrid for recent patients -->

        <Canvas>
            <Border Background="#FFF5F5F7" CornerRadius="10" Padding="10"
            Canvas.Left="266" Canvas.Top="356" Width="600" Height="400" HorizontalAlignment="Left" VerticalAlignment="Center">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="6,0,-6,0">
                    <WrapPanel Name="AppointmentsContainer"
                       Orientation="Horizontal"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       ItemWidth="220"
                       ItemHeight="Auto"
                       Margin="0"
                     />
                </ScrollViewer>
            </Border>
        </Canvas>






    </Canvas>


</Window>
