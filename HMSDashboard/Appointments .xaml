<Window x:Class="HMSDashboard.Appointments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMSDashboard"
        mc:Ignorable="d"
        Background="#FFF5F5F7"
        Title="Appointments" Height="800" Width="1000">
    <Canvas Margin="31,0,31,13">
        <!-- Sidebar -->
        <StackPanel Width="200" Height="704" Canvas.Left="0" Canvas.Top="0">
            <Image Height="77" Width="168" Source="/Group 1.png"/>
            <Label Content="Main menu" Width="160" Height="29"/>
            <StackPanel Margin="10">
                <!-- Repeated Menu Buttons with Canvas and Image -->
                <!-- Simplified here for clarity -->
                <!-- Dashboard Button -->
                <Canvas Height="51" Width="170">
                    <Button Content="Dashboard" Width="165" Height="36" Padding="10,5"
                     Background="#FFE4ECFF" BorderBrush="{x:Null}" Cursor="Hand"
                     Canvas.Left="5" Canvas.Top="5" Click="Button_Click_1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Image Height="26" Width="28" Source="/Combo Chart.png" Canvas.Left="12" Canvas.Top="8"/>
                </Canvas>
                <!-- Add other menu items similarly -->

                <!-- Patients -->
                <Canvas Height="51">
                    <Button Content="Patients"
      Padding="10,5"
      Canvas.Left="10"
      Canvas.Top="8"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Width="165"
      Height="36"
      Background="#FFE4ECFF"
      BorderBrush="{x:Null}"
      Click="Button_Click_1"
      Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}"
                  CornerRadius="6"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Image Height="24" Width="28" Canvas.Left="16" Canvas.Top="14"
     Source="/Add User Male.png"
     HorizontalAlignment="Center"
     VerticalAlignment="Top"/>
                </Canvas>

                <!-- Doctors -->
                <Canvas Height="51">
                    <Button Content="Doctors"
      Padding="10,5"
      Canvas.Left="10"
      Canvas.Top="8"
      HorizontalAlignment="Center"
      VerticalAlignment="Top"
      Width="165"
      Height="36"
      Background="#FFE4ECFF"
      BorderBrush="{x:Null}"
      Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}"
                  CornerRadius="6"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Image Height="28" Width="28" Source="/medical-assistance.png"
     Canvas.Left="17" Canvas.Top="12"
     HorizontalAlignment="Left"
     VerticalAlignment="Top"/>
                </Canvas>

                <!-- Appointments -->
                <Canvas Height="51">
                    <Button Content="Appointments"
      Padding="10,5"
      Canvas.Left="10"
      Canvas.Top="7"
      HorizontalAlignment="Left"
      VerticalAlignment="Top"
      Width="165"
      Height="36"
      Background="#FFBED3FF"
      BorderBrush="{x:Null}"
      Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}"
                  CornerRadius="6"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Image Height="28" Width="29" Canvas.Left="15" Canvas.Top="11"
     HorizontalAlignment="Left"
     VerticalAlignment="Top"
     Source="/Calendar Plus.png"/>
                </Canvas>

                <!-- Other menu -->
                <Canvas Height="53">
                    <Label Content="Other menu"
     Canvas.Top="17"
     Canvas.Left="10"
     FontSize="16"
     Foreground="#FF3A3939"
     HorizontalAlignment="Center"
     VerticalAlignment="Center"/>
                </Canvas>

                <!-- Payments -->
                <Canvas Height="51">
                    <Button Content="Payments"
      Padding="10,5"
      Canvas.Left="8"
      Canvas.Top="7"
      Width="164"
      Height="37"
      Background="#FFE4ECFF"
      BorderBrush="{x:Null}"
      Cursor="Hand"/>
                    <Image Height="28" Width="28" Source="/Coin in Hand.png"
     Canvas.Left="16" Canvas.Top="12"/>
                </Canvas>

                <!-- Reports -->
                <Canvas Height="51">
                    <Button Content="Reports"
      Padding="10,5"
      Canvas.Left="8"
      Canvas.Top="8"
      Width="164"
      Height="36"
      Background="#FFE4ECFF"
      BorderBrush="{x:Null}"
      Cursor="Hand"/>
                    <Image Height="32" Width="28" Source="/Test Results.png"
     Canvas.Left="17" Canvas.Top="10"/>
                </Canvas>

                <!-- Inventory -->
                <Canvas Height="51">
                    <Button Content="Inventory"
      Padding="10,5"
      Canvas.Left="8"
      Canvas.Top="8"
      Width="164"
      Height="36"
      Background="#FFE4ECFF"
      BorderBrush="{x:Null}"
      Cursor="Hand"/>
                    <Image Height="28" Width="28" Source="/Sell Stock.png"
     Canvas.Left="14" Canvas.Top="12"/>
                </Canvas>

                <!-- Separator -->
                <Separator Margin="10 20"/>

                <!-- Chat -->
                <Canvas Height="51">
                    <Button Content="Chat"
      Padding="10,5"
      Canvas.Left="8"
      Canvas.Top="8"
      Width="164"
      Height="36"
      Background="#FFF3F6FD"
      BorderBrush="{x:Null}"/>
                    <Image Height="28" Width="28" Source="/Chat Bubble.png"
     Canvas.Left="16" Canvas.Top="12"/>
                </Canvas>

                <!-- Help Center -->
                <Canvas Height="51">
                    <Button Content="Help Center"
      Padding="10,5"
      Canvas.Left="8"
      Canvas.Top="8"
      Width="164"
      Height="36"
      Background="#FFF3F6FD"
      BorderBrush="{x:Null}"/>
                    <Image Height="28" Width="28" Source="/Info.png"
     Canvas.Left="17" Canvas.Top="12"/>
                </Canvas>


            </StackPanel>
        </StackPanel>

        <!-- Profile Section -->
        <Border Canvas.Left="753" Canvas.Top="20" Width="175" Height="50" Background="#F0F0F0" CornerRadius="10" HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Ellipse Width="30" Height="30" Fill="Gray"/>
                <StackPanel Margin="5,0,0,0">
                    <TextBlock Text="Pasindu Path.." FontWeight="Bold"/>
                    <TextBlock Text="Admin" FontSize="10"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <Canvas Height="51" Canvas.Top="260"/>




        <!-- Patient Details Panel -->


        <Canvas Height="100" Canvas.Top="260">
            <!-- New Patient Button -->
            <Canvas>

                <Button Content="Add New Patient"
        Padding="10,5"
        Canvas.Left="249"
        Canvas.Top="32"
        Width="182"
        Height="43"
        Cursor="Hand"
        Click="newPatient"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                    CornerRadius="10"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Background>
                        <SolidColorBrush Color="#FFBED3FF"/>
                    </Button.Background>
                </Button>
            </Canvas>

            <!-- Search Box (TextBox) -->









        </Canvas>

        <Canvas>
            <!-- NIC Label -->
            <Label Content="Doctor Name&#xD;&#xA;"
           Canvas.Left="280"
           Canvas.Top="89"
           Foreground="Black"
           FontWeight="Bold"
           HorizontalAlignment="Left"
           VerticalAlignment="Top" Height="26"/>

            <!-- NIC TextBox -->
            <TextBox x:Name="DocNameTextBox"
             Width="250"
             Height="36"
             Canvas.Left="280"
             Canvas.Top="115"
             Padding="10,5"
             Background="White"
             BorderBrush="LightGray"
             BorderThickness="1"
             FontSize="14"
             VerticalContentAlignment="Center"
             HorizontalAlignment="Left"
             VerticalAlignment="Top">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- DatePicker -->
            <DatePicker x:Name="AppointmentDatePicker"
                        Height="36"
                        Width="145"
                        Canvas.Left="558"
                        Canvas.Top="113"
                        Padding="10,5"
                        FontSize="14"
                        Background="White"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">
                <DatePicker.Resources>
                    <Style TargetType="DatePicker">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DatePicker">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <DatePickerTextBox x:Name="PART_TextBox"
                                                               Background="Transparent"
                                                               BorderThickness="0"
                                                               VerticalContentAlignment="Center"/>
                                            <Button x:Name="PART_Button"
                                                    Width="20"
                                                    HorizontalAlignment="Right"
                                                    Background="Transparent"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="Gray"
                                                      Margin="0,10,5,10"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>


            <!-- Buttons -->

            <Button Content="Find"
            Height="38"
            Width="99"
            Canvas.Left="732"
            Canvas.Top="114"
            Background="#FFBED3FF"
            BorderThickness="0"
            Cursor="Hand"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Transparent"
            Padding="10,5"
             Click="findAppointment"
            />
        </Canvas>


        <!-- DataGrid for recent patients -->




    </Canvas>
</Window>
