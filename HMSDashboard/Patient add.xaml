<Window x:Class="HMSDashboard.Patient_add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Patient" Height="720" Width="1080" Background="#F7F7FA" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Rounded TextBox Style -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Canvas Width="1059">

        <!-- Sidebar -->
        <Rectangle Fill="White" Canvas.Left="0" Canvas.Top="68" Width="200" Height="626" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Text="Wellness" FontSize="20" FontWeight="Bold" Foreground="#5C64F3" Canvas.Left="20" Canvas.Top="20"/>

        <!-- Menu Items -->
        <StackPanel Canvas.Left="20" Canvas.Top="80">
            <TextBlock Text="Main Menu" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button x:Name="dashboardbtn" Content="Dashboard" Width="160" Height="30" Margin="0,0,0,5" Click="Button_Click"/>
            <Button Content="Patients" Width="160" Height="30" Margin="0,0,0,5" Background="#E6E9FF" Foreground="#5C64F3"/>
            <Button Content="Doctors" Width="160" Height="30" Margin="0,0,0,5"/>
            <Button Content="Appointments" Width="160" Height="30" Margin="0,0,0,20"/>
            <TextBlock Text="Other Menu" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button Content="Payments" Width="160" Height="30" Margin="0,0,0,5"/>
            <Button Content="Reports" Width="160" Height="30" Margin="0,0,0,5"/>
            <Button Content="Inventory" Width="160" Height="30" Margin="0,0,0,20"/>
            <TextBlock Text="Contact" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button Content="Chat" Width="160" Height="30" Margin="0,0,0,5"/>
            <Button Content="Help Center" Width="160" Height="30"/>
        </StackPanel>

        <!-- Profile -->
        <Border Canvas.Left="875" Canvas.Top="20" Width="175" Height="50" Background="#F0F0F0" CornerRadius="10" HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                <Ellipse Width="30" Height="30" Fill="Gray"/>
                <StackPanel Margin="5,0,0,0">
                    <TextBlock Text="Pasindu Path.." FontWeight="Bold"/>
                    <TextBlock Text="Admin" FontSize="10"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Panel -->
        <Border Canvas.Left="220" Canvas.Top="80" Width="820" Height="600" Background="White" CornerRadius="20">
            <Canvas Margin="20">
                <TextBlock Text="Patient Details" FontSize="20" FontWeight="Bold" Canvas.Left="10" Canvas.Top="10"/>

                <!-- Profile Photo -->
                <Rectangle Width="100" Height="100" Fill="#E0E0E0" Canvas.Left="10" Canvas.Top="50"/>
                <Image Height="100" Width="100" Canvas.Left="10" Canvas.Top="50" Source="/20180125_001_1_.jpg"/>
                <Button Content="Add+" Canvas.Left="10" Canvas.Top="160" Width="50" Height="25" Background="#5C64F3" Foreground="White"/>
                <Button Content="Remove" Canvas.Left="70" Canvas.Top="160" Width="60" Height="25" Background="#FFB3B3" Foreground="Black"/>

                <!-- Form Fields with Rounded TextBox -->
                <Label Content="Full Name" Canvas.Left="220" Canvas.Top="23" Foreground="#FF282AE4"/>
                <TextBox Style="{StaticResource RoundedTextBox}" Width="250" Canvas.Left="220" Canvas.Top="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <Label Content="NIC" Canvas.Left="500" Canvas.Top="19" Foreground="#FF282AE4"/>
                <TextBox Style="{StaticResource RoundedTextBox}" Width="250" Canvas.Left="500" Canvas.Top="50"/>

                <Label Content="Date Check In" Canvas.Left="220" Canvas.Top="95" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FF282AE4"/>
                <DatePicker Width="250" Canvas.Left="220" Canvas.Top="126" Height="30"/>

                <Label Content="Disease" Canvas.Left="500" Canvas.Top="94" RenderTransformOrigin="-0.11,-0.037" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FF282AE4"/>
                <TextBox Style="{StaticResource RoundedTextBox}" Width="250" Canvas.Left="500" Canvas.Top="125" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <Label Content="Blood Type" Canvas.Left="220" Canvas.Top="167" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.471,0.156" Foreground="#FF282AE4"/>
                <TextBox Style="{StaticResource RoundedTextBox}" Width="251" Canvas.Left="220" Canvas.Top="338" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <Label Content="Bed No" Canvas.Left="500" Canvas.Top="170" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FF282AE4"/>
                <TextBox Style="{StaticResource RoundedTextBox}" Width="250" Canvas.Left="500" Canvas.Top="198" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <Label Content="Gender" Canvas.Left="220" Canvas.Top="240" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#FF282AE4"/>
                <TextBox Style="{StaticResource RoundedTextBox}" Width="120" Canvas.Left="220" Canvas.Top="271" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <Label Content="Age" Canvas.Left="351" Canvas.Top="240" Foreground="#FF282AE4"/>
                <TextBox Style="{StaticResource RoundedTextBox}" Width="120" Canvas.Left="351" Canvas.Top="271"/>

                <Label Content="Address" Canvas.Left="497" Canvas.Top="240" RenderTransformOrigin="0.476,0.695" Foreground="#FF282AE4"/>
                <TextBox Style="{StaticResource RoundedTextBox}" Width="250" Height="105" TextWrapping="Wrap" Canvas.Left="500" Canvas.Top="271" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <Label Content="City" Canvas.Left="220" Canvas.Top="307" Foreground="#FF282AE4"/>
                <TextBox Style="{StaticResource RoundedTextBox}" Width="251" Canvas.Left="220" Canvas.Top="198" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <!-- Buttons -->
                <Button Content="Save" Width="100" Height="35" Canvas.Left="220" Canvas.Top="418" Background="#5C64F3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Button Content="Clear" Width="100" Height="35" Canvas.Left="330" Canvas.Top="418" Background="#FFB3B3" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Canvas>
        </Border>
    </Canvas>
</Window>
